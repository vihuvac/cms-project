{% extends '::base.html.twig' %}

{% block content %}
	<section id="city-form">
		<div class="span6">
			{#{% set badge = asset('bundles/website/images/icons/badge.jpg') %}#}
			<h2 class="phrase-alignment">...{% trans %}Ask me the world{% endtrans %}...</h2>
			<p class="lead">
				{% trans %}If any man seeks for greatness, let him forget greatness and ask for truth, and he will find both.{% endtrans %} <strong>Horace Mann</strong>
			</p>

	        <!--{#<img id="badge" src="{{ badge }}" alt="badge for contact form." width="120" height="120" />#}-->

			{% for flashMessage in app.session.flashbag.get('success') %}
	            <div class="alert alert-success">
	            	<button type="button" class="close" data-dismiss="alert">&times;</button>
	                {{ flashMessage }}
	            </div>
	        {% endfor %}
		</div>

		<div class="row-fluid">
			<div class="span7" id="cf-margin">
				<form action="{{ path('sonata_demo_contact') }}" class="form-horizontal" method="post" {{ form_enctype(form) }}>

					{{ form_widget(form, {'form_type': 'horizontal'}) }}

					<div class="controls">
						<button type="submit" class="btn btn-primary">{% trans %}Submit{% endtrans %}</button>
					</div>
	            </form>
			</div>
		</div>
	</section>
{% endblock %}